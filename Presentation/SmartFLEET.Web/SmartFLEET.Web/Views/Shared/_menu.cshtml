@using SmartFleet.Resources

<header class="main-header" style="top: -50px; padding-bottom: 10px; ">

    <!-- Logo -->
    <a href="/" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>S</b>F</span>
        <!-- logo for regular state and mobile devices -->
        <span > <b>Smart</b> FLEET  <i class=" icofont-map-pins icofont-1x"></i></span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
       
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown dropdown-notifications">
                    <a href="#notifications-panel" class="dropdown-toggle" data-toggle="dropdown">
                        <i data-count="2" class="glyphicon glyphicon-bell notification-icon"></i>
                    </a>

                    <div class="dropdown-container" style="margin-left:-550%;margin-top: 10px;">

                        <div class="dropdown-toolbar">
                            <div class="dropdown-toolbar-actions">
                                <a href="#">Mark all as read</a>
                            </div>
                            <h3 class="dropdown-toolbar-title">Notifications (2)</h3>
                        </div><!-- /dropdown-toolbar -->

                        <ul class="dropdown-menu">
                            ...
                        </ul>

                        <div class="dropdown-footer text-center">
                            <a href="#">View All</a>
                        </div><!-- /dropdown-footer -->
                        
                    </div><!-- /dropdown-container -->
                </li><!-- /dropdown -->
                
                @if (User.IsInRole("customer") || User.IsInRole("admin"))
                {
                    <li><a href="@Url.Action("Index", "Administrator/Admin")"><i class="fa fa-cog fa-lg"></i> Admin</a></li>

                }
                
                    
                    <li class="user user-menu">
                        <a href="@Url.Action("Logout","Account")">
                            <i class="glyphicon glyphicon-new-window"></i>
                            <span>Log out</span>
                        </a>
                    </li>
                
                

               
                <li><a href="@Url.Action("Logout", "Account")"><i class="fa fa-power-off fa-lg"></i> Log out</a></li>
            </ul>
        </div>
    </nav>
</header>
<div class="box" style="padding: 10px">
    <h4>Créer un nouveau véhicule </h4>
    <hr/>
    <div class="row">
        <div class="col-7">
            <form class="form-horizontal" name="vehicleForm">
                <fieldset>

                    <!-- Form Name -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="VehicleName">Nom</label>
                        <div class="col-md-5">
                            <input width="220" id="VehicleName" name="VehicleName" ng-required="true" ng-model="vehicle.VehicleName" type="text" placeholder="" class="form-control input-md">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="LicensePlate">Immatriculation</label>
                        <div class="col-md-5">
                            <input width="220" id="LicensePlate" name="LicensePlate" ng-model="vehicle.LicensePlate" type="text" placeholder="" class="form-control input-md">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Vin">VIN</label>
                        <div class="col-md-5">
                            <input width="220" id="Vin" name="Vin" ng-model="vehicle.Vin" type="text" placeholder="" class="form-control input-md">

                        </div>
                    </div>
                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="VehicleType">Type</label>
                        <div class="col-md-5">
                            <select id="VehicleType" ng-required="true" ng-model="vehicle.VehicleType" name="VehicleType" class="form-control">
                                <option ng-repeat="option in vehicle.VehicleTypes" value="{{option.Key}}">{{option.Value}}</option>

                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Model">Modèle</label>
                        <div class="col-md-5">
                            <select id="Model_Id" name="Model_id" ng-model="vehicle.ModelId" class="form-control">
                                <option ng-repeat="option in vehicle.Models" value="{{option.Id}}">{{option.Name}}</option>

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Brand">Marque</label>
                        <div class="col-md-5">
                            <select id="Brand_Id" ng-model="vehicle.BrandId" name="Brand_Id" class="form-control">
                                <option ng-repeat="option in vehicle.Brands" value="{{option.Id}}">{{option.Name}}</option>

                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Cutomer_Id">Client</label>
                        <div class="col-md-5">
                            <select id="CustomerId" ng-required="true" name="CustomerId" ng-model="vehicle.CustomerId" class="form-control">
                                <option ng-repeat="option in vehicle.Customers" value="{{option.Id}}">{{option.Name}}</option>

                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Boxe_Id">Boitiers</label>
                        <div class="col-md-5">
                            <select id="Boxe_Id" name="Boxe_Id" ng-model="vehicle.BoxId" class="form-control">
                                <option ng-repeat="option in vehicle.Boxes" value="{{option.Id}}">{{option.Imei}}</option>

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Vin">Kilométrage</label>
                        <div class="col-md-5">
                            <input id="Milestone" name="Milestone" ng-model="vehicle.Milestone" type="number" placeholder="" class="form-control input-md">

                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-4 control-label " for="Street">Options</label>

                        <label class="checkbox-inline"><input type="checkbox" value="Customer" ng-model="vehicle.EnableCan" name="optradio">CAN</label>
                        <label class="checkbox-inline"><input type="checkbox" value="User" ng-model="vehicle.EcoDrive" name="optradio">Eco-conduite</label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" ng-disabled="vehicleForm.$invalid ||vehicleForm.$pristine" ng-click="addVehicle(vehicle)">Valider</button>

                        <button type="button" ui-sref="vehicles" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>



<script>
    $('select').select2({
        width: '220'
    });
</script>


<div  style="padding: 10px">
 
    <form name="userForm" class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <label class="col-md-4 control-label" for="Cutomer_Id">Client</label>
                <div class="col-md-5">
                    <select id="CustomerId" ng-required="true" name="CustomerId" ng-model="user.CustomerId" class="form-control">
                        <option ng-repeat="option in user.Customers" value="{{option.Id}}">{{option.Name}}</option>

                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="Name">UserName</label>
                <div class="col-md-5">
                    <input id="Name" ng-model="user.UserName" ng-required="true" name="Name" type="text" placeholder="" class="form-control input-md">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Tel">Password</label>
                <div class="col-md-5">
                    <input id="Tel" ng-model="user.Password" ng-required="true" name="Tel" type="password" placeholder="" class="form-control input-md">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Email">Email</label>
                <div class="col-md-5">
                    <input id="Email" type='email' validate-email ng-model="user.Email" ng-required="true" name="Email" placeholder="" class="form-control input-md">

                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Country">TimeZoneInfo</label>
                <div class="col-md-5">
                    <select id="Country" ng-model="user.TimeZoneInfo" name="Country" class="form-control">
                        <option ng-repeat="option in user.TimeZoneInfos" value="{{option}}">{{option}}</option>

                    </select>
                </div>
            </div>


            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label " for="Street">PhoneNumber</label>
                <div class="col-md-5">
                    <input class="form-control" ng-model="user.PhoneNumber" id="Street" name="Street"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label " for="Street">Role</label>

                <label class="radio-inline"><input type="radio" value="Customer" ng-model="user.role" name="optradio">Owner</label>
                <label class="radio-inline"><input type="radio" value="User" ng-model="user.role" name="optradio">User</label>
            </div>


            <!-- Default checked -->

        </fieldset>
       
    </form>

</div>
<script>
    $('select').select2({
        width:'220'
    });
</script>
@using SmartFleet.Resources
<div class="box" style="padding: 10px">
<h4>@Resource.AddCustomer </h4>
<hr/>
<form name="customerForm" class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="col-md-4 control-label" for="Name">Nom</label>
            <div class="col-md-5">
                <input id="Name" ng-model="customer.Name" ng-required="true" name="Name" type="text" placeholder="" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="Tel">N° tél</label>
            <div class="col-md-5">
                <input id="Tel" ng-model="customer.Tel" ng-required="true" name="Tel" type="text" placeholder="" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="Email">Email</label>
            <div class="col-md-5">
                <input  validate-email ng-model="customer.Email" ng-required="true"  type="email" placeholder="" class="form-control input-md">

            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="Country">Pays</label>
            <div class="col-md-5">
                <select id="Country" ng-model="customer.Country" name="Country" class="form-control">
                    <option ng-repeat="option in customer.Countries" value="{{option}}">{{option}}</option>

                </select>
            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="State">Ville</label>
            <div class="col-md-5">
                <input id="State" ng-model="customer.State" name="State" type="text" placeholder="" class="form-control input-md">
            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="Street">Adress</label>
            <div class="col-md-5">
                <textarea ng-required="true" class="form-control" ng-model="customer.Street" id="Street" name="Street"></textarea>
            </div>
        </div>

    </fieldset>
    <list-users></list-users>
    <div class="modal-footer">
        <button type="button" class="btn btn-success"  ng-click="onValidate(customer)" >Valider</button>

        <button type="button" ui-sref="customers" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</form>

    </div>
<script>
    $('select').select2({
        width:'220'
    });
</script>